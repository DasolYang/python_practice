word = 'Hey, study python!'
print('Hey, study python!'.find(',')) # 3
print(word.find('!')) # 17

print('Hey, study python!'[6]) # 6
print(word[5:9]) # stud
print(word[5:]) # study python!

print(len(word)) # 18
print(word.startswith('He')) # True
print(word.endswith('on!')) # True
print('    keep learning     '.strip()) # 'keep learning'
